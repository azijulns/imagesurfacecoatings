<section class="ni-hero">
  <div class="ni-hero__slider-controls">
    <button class="ni-hero__slider-control ni-slide-prev">
      <svg fill="#fff" height="40px" width="40px" viewBox="0 0 512 512">
        <path d="M256,0C114.615,0,0,114.615,0,256s114.615,256,256,256s256-114.616,256-256S397.385,0,256,0z M346.899,280.959 l-85.594,85.594c-13.783,13.784-36.132,13.784-49.917,0c-13.784-13.784-13.784-36.133,0-49.917L272.023,256l-60.635-60.635 c-13.784-13.784-13.784-36.133,0-49.917s36.134-13.784,49.917,0l85.594,85.594C360.683,244.825,360.683,267.175,346.899,280.959z"/>
      </svg>
    </button>
    <button class="ni-hero__slider-control ni-slide-next">
      <svg fill="#fff" height="40px" width="40px" viewBox="0 0 512 512">
        <path d="M256,0C114.615,0,0,114.615,0,256s114.615,256,256,256s256-114.616,256-256S397.385,0,256,0z M346.899,280.959 l-85.594,85.594c-13.783,13.784-36.132,13.784-49.917,0c-13.784-13.784-13.784-36.133,0-49.917L272.023,256l-60.635-60.635 c-13.784-13.784-13.784-36.133,0-49.917s36.134-13.784,49.917,0l85.594,85.594C360.683,244.825,360.683,267.175,346.899,280.959z"/>
      </svg>
    </button>
  </div>

  <div class="ni-hero__slider">
    {% for block in section.blocks %}
      <div class="ni-hero__slide" {{ block.shopify_attributes }}>
        <figure class="ni-hero__slide__bg">
          {% if block.settings.image != blank %}
            {{
              block.settings.image
              | image_url: width: 2000
              | image_tag: loading: 'lazy', alt: block.settings.image.alt, class: 'ni-hero__slide-img'
            }}
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </figure>

        <div class="ni-container">
          <div class="ni-hero__slide__content">
            {% if block.settings.subtitle != blank %}
              <h5 class="ni-hero__slide__subtitle">{{ block.settings.subtitle }}</h5>
            {% endif %}

            {% if block.settings.title != blank %}
              <h2 class="ni-hero__slide__title  ni-h3">{{ block.settings.title }}</h2>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="ni-hero__slide__dsc">{{ block.settings.description }}</div>
            {% endif %}

            <div class="ni-hero__slide__btns ni-flex">
              {% if block.settings.button_1_text != blank %}
                <a
                  href="{{ block.settings.button_1_link }}"
                  class="ni-hero__slide__btn ni-btn--{{ block.settings.button_1_style }}"
                >
                  {{ block.settings.button_1_text }}
                </a>
              {% endif %}

              {% if block.settings.button_2_text != blank %}
                <a
                  href="{{ block.settings.button_2_link }}"
                  class="ni-hero__slide__btn ni-btn--{{ block.settings.button_2_style }}"
                >
                  {{ block.settings.button_2_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Slider",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Epoxy Floor Covering Lucasville, OH, and Surrounding Areas."
        },
        {
          "type": "html",
          "id": "title",
          "label": "Title",
          "default": "Getting your home coating is easy."
        },

        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "header",
          "content": "Buttons"
        },
        {
          "type": "text",
          "id": "button_1_text",
          "label": "Button 1 Text",
          "default": "BOOK NOW!"
        },
        {
          "type": "url",
          "id": "button_1_link",
          "label": "Button 1 Link"
        },
        {
          "type": "select",
          "id": "button_1_style",
          "label": "Button 1 Style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" }
          ],
          "default": "primary"
        },
        {
          "type": "text",
          "id": "button_2_text",
          "label": "Button 2 Text",
          "default": "CONTACT US!"
        },
        {
          "type": "url",
          "id": "button_2_link",
          "label": "Button 2 Link"
        },
        {
          "type": "select",
          "id": "button_2_style",
          "label": "Button 2 Style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" }
          ],
          "default": "secondary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "subtitle": "Epoxy Floor Covering Lucasville, OH, and Surrounding Areas.",
            "title": "Getting your home coating is easy.",
            "button_1_text": "BOOK NOW!"
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "For your home or Business",
            "button_1_text": "(855) 363-7699",
            "button_2_text": "CONTACT US!"
          }
        }
      ]
    }
  ]
}
{% endschema %}
